<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SwasthyaPath" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/deep_green</item>
        <item name="colorPrimaryVariant">@color/soft_green</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/soft_green</item>
        <item name="colorSecondaryVariant">@color/deep_green</item>

        <item name="colorAccent">@color/warm_orange</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>

        <item name="android:colorBackground">@color/white</item>

        <item name="android:statusBarColor">@color/deep_green</item>
        <item name="android:navigationBarColor">@color/white</item>

        <item name="colorControlHighlight">@color/warm_orange</item>
    </style>

    <style name="Theme.SwasthyaPath.NoActionBar" parent="Theme.SwasthyaPath">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
