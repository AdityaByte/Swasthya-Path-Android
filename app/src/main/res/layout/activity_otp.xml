<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/glossy_bg"
    android:padding="24dp"
    tools:context="OtpActivity">



    <!-- Title -->
    <TextView
        android:id="@+id/otp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify Your Account"
        android:textColor="?attr/colorPrimary"
        android:textSize="28sp"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="24dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/otp_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the 6-digit OTP sent to your email"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="15sp"
        android:fontFamily="@font/poppins"
        android:alpha="0.85"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/otp_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- OTP CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/otpCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/otp_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        android:backgroundTint="@color/white"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <!-- OTP Inputs -->
            <in.ayush.swasthyapath.component.CustomInputField
                android:id="@+id/otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cif_hintText="One Time Password"
                app:cif_inputType="text"
                />

            <!-- Verify Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/verify_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify OTP"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/poppins"
                android:textSize="16sp"
                android:paddingVertical="14dp"
                android:layout_marginTop="26dp"
                android:textAllCaps="false"
                app:backgroundTint="?attr/colorPrimary"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- RESEND OTP -->
    <TextView
        android:id="@+id/resend_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend OTP in 30s"
        android:textSize="15sp"
        android:fontFamily="@font/poppins"
        android:textColor="?android:attr/textColorPrimary"
        android:alpha="0.85"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/otpCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
