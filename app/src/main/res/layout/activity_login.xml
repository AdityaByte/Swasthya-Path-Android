<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/glossy_bg"
    android:padding="24dp"
    tools:context="LoginActivity">

    <TextView
        android:id="@+id/titleLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wlcm_bck_txt"
        android:textColor="?attr/colorPrimary"
        android:textSize="30sp"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <TextView
        android:id="@+id/subtitleLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_screen_head_text"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="15sp"
        android:fontFamily="@font/poppins"
        android:alpha="0.85"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/titleLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/containerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        android:backgroundTint="@color/white"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/subtitleLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="22dp">

            <!-- Role -->
            <in.ayush.swasthyapath.component.CustomInputField
                android:id="@+id/drop_down_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cif_dropdownItems="PATIENT,DOCTOR,ADMIN"
                app:cif_hintText="Select Role"
                app:cif_inputType="dropdown"
                android:layout_marginBottom="18dp"
                app:cif_endIconMode="custom"
                app:cif_endIconDrawable="@drawable/badge"/>

            <!-- Email -->
            <in.ayush.swasthyapath.component.CustomInputField
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cif_hintText="Email"
                app:cif_inputType="textEmailAddress"
                android:layout_marginBottom="18dp"
                app:cif_endIconMode="custom"
                app:cif_endIconDrawable="@drawable/account"/>

            <!-- Password -->
            <in.ayush.swasthyapath.component.CustomInputField
                android:id="@+id/pass_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cif_hintText="Password"
                app:cif_inputType="textPassword"
                android:layout_marginBottom="24dp"
                app:cif_endIconMode="password_toggle"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_btn_text"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/poppins"
                android:textSize="16sp"
                android:paddingVertical="14dp"
                android:textAllCaps="false"
                app:cornerRadius="12dp"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                app:backgroundTint="?attr/colorPrimary"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/redirect_signup_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_text"
        android:textSize="15sp"
        android:fontFamily="@font/poppins"
        android:textColor="?android:attr/textColorPrimary"
        android:alpha="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
