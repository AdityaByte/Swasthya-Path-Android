<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/glossy_bg">

    <TextView
        android:id="@+id/titleVikruti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vikruti Assessment"
        android:textSize="27sp"
        android:textColor="?attr/colorPrimary"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <TextView
        android:id="@+id/subtitleVikruti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell us about your current body state"
        android:textSize="15sp"
        android:alpha="0.85"
        android:textColor="?attr/colorPrimaryVariant"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/titleVikruti"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/vikrutiCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        android:backgroundTint="@color/white"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/subtitleVikruti"
        app:layout_constraintBottom_toTopOf="@id/finishBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:orientation="vertical">

                <in.ayush.swasthyapath.component.CustomInputField
                    android:id="@+id/current_concerns_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cif_hintText="Current Concerns"
                    app:cif_inputType="text"
                    android:layout_marginBottom="18dp"/>

                <in.ayush.swasthyapath.component.CustomInputField
                    android:id="@+id/current_energy_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cif_hintText="Current Energy"
                    app:cif_inputType="dropdown"
                    app:cif_dropdownItems="Low,Moderate,High"
                    android:layout_marginBottom="18dp"/>

                <in.ayush.swasthyapath.component.CustomInputField
                    android:id="@+id/current_sleep_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cif_hintText="Current Sleep"
                    app:cif_inputType="dropdown"
                    app:cif_dropdownItems="Light,Moderate,Deep"
                    android:layout_marginBottom="18dp"/>

                <in.ayush.swasthyapath.component.CustomInputField
                    android:id="@+id/digestion_today_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cif_hintText="Digestion Today"
                    app:cif_inputType="dropdown"
                    app:cif_dropdownItems="Poor,Moderate,Good"
                    android:layout_marginBottom="24dp"/>

            </LinearLayout>

        </ScrollView>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/finishBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:paddingVertical="14dp"
        android:text="Finish"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:backgroundTint="?attr/colorPrimary"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
